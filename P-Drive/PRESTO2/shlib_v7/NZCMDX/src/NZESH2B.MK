#
#	<<< デバッグ情報の定義 >>>
#
DEBUG 	= 0
#DEBUG	= 1
#
#	<<< エンディアンの定義 >>>
#
#ENDIAN	= 0
ENDIAN	= 1
#
#	<<< CPUの定義 >>>
#
CPUTYPE = 2
#CPUTYPE = 3
#
ifeq ($(ENDIAN),1)
ETYPE	= big
else
ETYPE	= little
endif

ifeq ($(CPUTYPE),3)
CTYPE	= sh3
ifeq ($(ENDIAN),1)
TARGET		=nzesh3b
else
TARGET		=nzesh3l
endif
else
CTYPE	= sh2
TARGET		=nzesh2b
endif
#
#	<<< ファイルネーム定義 >>>
#
ID		=nzexid
#
NZR151		=nzr151
NZR152		=nzr152
NZR153		=nzr153
NZR154		=nzr154
NZR155		=nzr155
NZR156		=nzr156
NZI151		=nzi151
NZI152		=nzi152

#===========================================================
#
ifeq ($(DEBUG),1)
CCOPT	= -cpu=$(CTYPE) -op=0 -en=$(ETYPE) -me -debug -comment=nest -l -def=DEBUG
else
CCOPT	= -cpu=$(CTYPE) -op=1 -en=$(ETYPE) -me -nodebug -comment=nest -l -def=NDEBUG
endif

INCLIST := $(INC_BASE)
INCLIST := $(INCLIST),$(SHC_INC)
INCLIST := $(INCLIST),$(NORTI_BASE)\inc

CFLAGS	:= -i=$(INCLIST)

CC	:=shc $(CCOPT) $(CFLAGS)
OPTLNK	=optlnk

#===========================================================
#
#	<<< ライブラリーの作成 >>>
#
OFILE1=$(ID).obj
OFILE2=$(NZR151).obj $(NZR152).obj $(NZR153).obj $(NZR154).obj $(NZR155).obj $(NZR156).obj
OFILE3=$(NZI151).obj $(NZI152).obj
OFILES=$(OFILE1) $(OFILE2) $(OFILE3)
#
#
#
all : clean $(TARGET).lib
#
#	<<< オブジェクト･ファイルの生成 >>>
#
ERRFILE =err.txt

$(ID).obj : $(ID).c
	$(CC) $(ID).c				>  $(ERRFILE)
$(NZR151).obj : $(NZR151).c
	$(CC) $(NZR151).c			>>  $(ERRFILE)
$(NZR152).obj : $(NZR152).c
	$(CC) $(NZR152).c			>>  $(ERRFILE)
$(NZR153).obj : $(NZR153).c
	$(CC) $(NZR153).c			>>  $(ERRFILE)
$(NZR154).obj : $(NZR154).c
	$(CC) $(NZR154).c			>>  $(ERRFILE)
$(NZR155).obj : $(NZR155).c
	$(CC) $(NZR155).c			>>  $(ERRFILE)
$(NZR156).obj : $(NZR156).c
	$(CC) $(NZR156).c			>>  $(ERRFILE)
$(NZI151).obj : $(NZI151).c
	$(CC) $(NZI151).c			>>  $(ERRFILE)
$(NZI152).obj : $(NZI152).c
	$(CC) $(NZI152).c			>>  $(ERRFILE)

$(TARGET).lib : $(OFILES) $(TARGET).sub
	if exist $(TARGET).lib del $(TARGET).lib
	$(OPTLNK) -SUBCOMMAND=$(TARGET).sub
	copy $(TARGET).lib ..\*.*

$(TARGET).sub :
	echo	FORM	= library		>$(TARGET).sub
	echo	OUTPUT	= $(TARGET).lib		>>$(TARGET).sub
	echo	INPUT	= $(OFILES)		>>$(TARGET).sub
	echo	LIST	= $(TARGET)		>>$(TARGET).sub
	echo	EXIT				>>$(TARGET).sub

#-----------------------------------------------------------------------#
#	ＭＡＫＥコマンドの定義						#
#-----------------------------------------------------------------------#
DRV 	=p:

checkin :
	perl $(DRV)\tool\perl\checkin.pl *.mk	>  $(TARGET).bat
	perl $(DRV)\tool\perl\checkin.pl *.h	>> $(TARGET).bat
	perl $(DRV)\tool\perl\checkin.pl *.c	>> $(TARGET).bat
	perl $(DRV)\tool\perl\checkin.pl *.asm	>> $(TARGET).bat

clean :
	if exist *.obj del *.obj
	if exist *.lbp del *.lbp
	if exist *.lst del *.lst
	if exist *.sub del *.sub
	if exist *.lib del *.lib

release :
	if exist *.mk	ident *.mk	>  release.id
	if exist *.h	ident *.h	>> release.id
	if exist *.c	ident *.c	>> release.id
	if exist *.asm	ident *.asm	>> release.id

